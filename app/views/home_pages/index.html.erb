<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 p-2">
  <% @menu_items.each do |menu_item| %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="swiper" data-controller="swiper">
        <div class="swiper-wrapper">
          <% if menu_item.menu_images.attached? %>
            <% menu_item.menu_images.each do |image| %>
              <div class="swiper-slide flex justify-center items-center">
                <%= image_tag image, class: "object-cover w-full h-full" %>
              </div>
            <% end %>
          <% else %>
            <div class="swiper-slide flex justify-center items-center">
              <p class="text-gray-600 text-center">No images available</p>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>

      <div class="p-4">
        <h3 class="mb-2 text-xl font-bold tracking-tight text-gray-900">
          <%= link_to menu_item.title, menu_item_path(menu_item), class: "text-blue-600 hover:underline" %>
        </h3>
        <p class="text-lg font-semibold text-gray-700">
          <%= number_to_currency(menu_item.price, unit: "$") %>
        </p>
      </div>
    </div>
  <% end %>
</div>

