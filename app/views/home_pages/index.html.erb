<div class="flex flex-wrap gap-4 p-2 justify-center items-center min-h-screen">
  <% @menu_items.each do |menu_item| %>
    <div class="w-full max-w-sm bg-white rounded-lg shadow-lg border border-sky-200">
      <div class="swiper" data-controller="swiper" style="width: 100%; height: 300px;">
        <div class="swiper-wrapper">
          <% if menu_item.menu_images.attached? %>
            <% menu_item.menu_images.each do |image| %>
              <div class="swiper-slide flex justify-center items-center">
                <%= image_tag image, class: "object-contain w-full h-full max-w-full max-h-full" %>
              </div>
            <% end %>
          <% else %>
            <div class="swiper-slide flex justify-center items-center">
              <p class="text-gray-600 text-center w-full h-full flex items-center justify-center">
                No images available
              </p>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>

      <div class="bg-white p-4 sm:p-6">
        <h3 class="mb-2 text-2xl font-bold tracking-tight">
          <%= link_to menu_item.title, menu_item_path(menu_item), class: "text-sky-500 hover:underline" %>
        </h3>
        <p class="text-lg font-semibold text-gray-700">
          <%= number_to_currency(menu_item.price, unit: "$") %>
        </p>
      </div>
    </div>
  <% end %>
</div>
