<div class="flex flex-wrap gap-4 p-2">
  <% @menu_items.each do |menu_item| %>
    <div class="max-w-sm bg-white border-2 border-indigo-200 rounded-lg">
      <div class="swiper" data-controller="swiper" style="width: 100%; height: 300px;">
        <div class="swiper-wrapper">
          <% if menu_item.menu_images.attached? %>
            <% menu_item.menu_images.each do |image| %>
              <div class="swiper-slide flex justify-center items-center" style="width: 100%; height: 100%;">
                <%= image_tag image, class: "object-contain w-full h-full", style: "max-width: 100%; max-height: 100%;" %>
              </div>
            <% end %>
          <% else %>
            <div class="swiper-slide flex justify-center items-center" style="width: 100%; height: 100%;">
              <p class="text-gray-600 text-center">No images available</p>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>

      <div class="bg-white p-4 sm:p-6">
        <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-900">
          <%= link_to menu_item.title, menu_item_path(menu_item), class: "text-blue-600 hover:underline" %>
        </h3>
        <p class="text-lg font-semibold text-gray-700">
          <%= number_to_currency(menu_item.price, unit: "$") %>
        </p>
      </div>
    </div>
  <% end %>
</div>
