<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row gap-8">
    <!-- Image Container -->
    <div class="max-w-sm bg-white border-2 border-indigo-200 rounded-lg flex-shrink-0" style="width: 100%; height: 300px;">
      <div class="swiper" data-controller="swiper" style="width: 100%; height: 100%;">
        <div class="swiper-wrapper">
          <% if @menu_item.menu_images.attached? %>
            <% @menu_item.menu_images.each do |image| %>
              <div class="swiper-slide flex justify-center items-center" style="width: 100%; height: 100%;">
                <%= image_tag image, class: "object-contain w-full h-full", style: "max-width: 100%; max-height: 100%;" %>
              </div>
            <% end %>
          <% else %>
            <div class="swiper-slide flex justify-center items-center" style="width: 100%; height: 100%;">
              <p class="text-gray-600 text-center">No images available</p>
            </div>
          <% end %>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </div>

    <!-- Menu Details (Right Side) -->
    <div class="w-full md:w-1/2 space-y-4 bg-white p-6 rounded-lg shadow-lg flex-grow">
      <h2 class="text-2xl font-bold text-sky-600"><%= @menu_item.title %></h2>
      <p class="text-lg"><strong class="text-sky-600">Category:</strong> <%= @menu_item.category %></p>
      <p class="text-lg"><strong class="text-sky-600">Subcategory:</strong> <%= @menu_item.subcategory %></p>
      <div class="rich-text-editor">
        <p class="text-gray-700"><strong>Description:</strong> <%= @menu_item.description %></p>
      </div>
      <p class="text-xl font-semibold"><strong class="text-sky-600">Price:</strong> <%= number_to_currency(@menu_item.price, unit: "$") %></p>
      <p class="text-lg"><strong class="text-sky-600">Availability:</strong> <%= @menu_item.availability ? "Yes" : "No" %></p>
    </div>
  </div>
</div>