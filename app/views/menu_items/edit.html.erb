<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-3xl bg-white px-8 pt-10 pb-8 shadow-xl ring-1 ring-sky-900/5 rounded-lg">
    <h2 class="text-3xl text-center mb-6 text-sky-700 font-semibold">Edit Menu Item</h2>
    <div class="mt-2">
      <strong>Images:</strong>

      <div class="flex flex-wrap justify-center mt-4 border border-dashed border-gray-300 rounded-md p-4 overflow-hidden">
        <% if @menu_item.menu_images.attached? %>
          <div class="flex flex-wrap justify-center space-x-2">
            <% @menu_item.menu_images.each do |image| %>
              <div class="relative w-32 h-32 border border-gray-200 rounded m-2">
                <%= image_tag image, class: "object-cover w-full h-full" %>

                <%= button_to 'Delete', delete_menu_item_image_menu_item_path(@menu_item, image_id: image.id),
                              method: :delete,
                              class: "absolute top-0 right-0 bg-red-500 text-white px-2 py-1 rounded" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p>No images were attached when this menu was created</p>
        <% end %>
      </div>
    </div>

    <%= form_with(model: @menu_item) do |form| %>
      <% if @menu_item.errors.any? %>
        <div role="alert" >
          <h2 class="font-bold"><%= pluralize(@menu_item.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @menu_item.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render "edit_menu_images_preview", form: form, menu_item: @menu_item %>

      <div class="grid grid-cols-2 gap-6 mb-6">
        <!-- Category -->
        <div class="flex flex-col items-center">
          <%= form.label "Category:", class: "block mb-2 text-sm font-medium text-gray-900"%>
          <%= form.select :category, options_for_select([
                                                          ["Appetizers", "Appetizers"],
                                                          ["Desserts", "Desserts"],
                                                          ["Beverages", "Beverages"],
                                                          ["Main Menu", "Main Menu"],
                                                        ].sort, selected: @menu_item.category), { include_blank: "Select Category" }, { class: "bg-gray-50 border border-sky-400 text-gray-900 text-sm rounded-lg focus:ring-sky-300 focus:border-sky-500 w-64 p-3 transition duration-150 ease-in-out" } %>
        </div>

        <!-- Subcategory -->
        <div class="flex flex-col items-center">
          <%= form.label "Subcategory:", class: "block mb-2 text-sm font-medium text-gray-900" %>
          <%= form.select :subcategory, options_for_select([
                                                             ["Soft drinks", "Soft drinks"],
                                                             ["Fruit smoothies", "Fruit smoothies"],
                                                             ["Energy drinks", "Energy drinks"],
                                                             ["Chicken wings", "Chicken wings"],
                                                             ["Sliders", "Sliders"],
                                                             ["Dumplings", "Dumplings"],
                                                             ["Chicoo", "Chicoo"],
                                                             ["Jell-O", "Jell-O"],
                                                             ["YoGo", "YoGo"],
                                                             ["Grilled Chicken Alfredo", "Grilled Chicken Alfredo"],
                                                             ["Vegetable Stir-Fry", "Vegetable Stir-Fry"],
                                                             ["Beef Tacos", "Beef Tacos"],
                                                           ].sort, selected: @menu_item.subcategory), { include_blank: "Select Subcategory" }, { class: "bg-gray-50 border border-sky-400 text-gray-900 text-sm rounded-lg focus:ring-sky-300 focus:border-sky-500 w-64 p-3 transition duration-150 ease-in-out" } %>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-6 mb-6">
        <!-- Title -->
        <div class="flex flex-col items-center">
          <%= form.label "Title:", class: "block font-medium text-gray-700"%>
          <%= form.text_field :title, placeholder: "", class: "w-64 rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
        </div>

        <!-- Price -->
        <div class="flex flex-col items-center">
          <%= form.label "Price:", class: "block font-medium text-gray-700" %>
          <%= form.number_field :price, step: 0.01, min: 0, placeholder: "", class: "w-64 rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
        </div>
      </div>

      <!-- Availability -->
      <div class="flex flex-col items-center mb-6">
        <%= form.label :availability, "Availability:", class: "block mb-2 text-sm font-medium text-gray-900" %>

        <div class="flex items-center mb-2">
          <%= form.radio_button :availability, true, id: "availability_yes", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500" %>
          <%= form.label :availability_yes, "Yes", class: "ms-2 text-sm font-medium text-gray-900" %>
        </div>

        <div class="flex items-center">
          <%= form.radio_button :availability, false, id: "availability_no", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500" %>
          <%= form.label :availability_no, "No", class: "ms-2 text-sm font-medium text-gray-900" %>
        </div>
      </div>

      <!-- Description (full-width row) -->
      <div class="flex flex-col items-center mb-6">
        <%= form.label :description, "Description:", class: "block font-medium text-gray-700 mb-4" %>
        <%= form.rich_text_area :description, class: "w-full h-80 overflow-y-auto rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
      </div>

      <!-- Submit Button (centered) -->
      <div class="mb-4 flex justify-center">
        <%= form.submit "Update", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      </div>


  <% end %>
  </div>
</div>

