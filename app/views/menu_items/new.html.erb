<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="w-full max-w-3xl bg-white px-8 pt-10 pb-8 shadow-xl ring-1 ring-sky-900/5 rounded-lg">
    <h2 class="text-3xl text-center mb-6 text-sky-700 font-semibold">Create Menu Item</h2>

    <%= form_with(model: @menu_item, class: "space-y-6") do |form| %>
      <% if @menu_item.errors.any? %>
        <div role="alert" class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
          <h2 class="font-bold"><%= pluralize(@menu_item.errors.count, "error") %> prohibited this product from being saved:</h2>
          <ul>
            <% @menu_item.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render "menu_images_preview", form: form, menu_item: @menu_item %>

      <div class="flex flex-col items-center">
        <%= form.label "Category:", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.select :category, options_for_select([
                                                        ["Appetizers", "Appetizers"],
                                                        ["Desserts", "Desserts"],
                                                        ["Beverages", "Beverages"],
                                                        ["Main Menu", "Main Menu"]
                                                      ].sort), { include_blank: "Select Category" }, { class: "bg-gray-50 border border-sky-400 text-gray-900 text-sm rounded-lg focus:ring-sky-300 focus:border-sky-500 w-64 p-3 transition duration-150 ease-in-out" } %>
      </div>

      <div class="flex flex-col items-center">
        <%= form.label "Subcategory:", class: "block mb-2 text-sm font-medium text-gray-900" %>
        <%= form.select :subcategory, options_for_select([
                                                           ["Soft drinks", "Soft drinks"],
                                                           ["Fruit smoothies", "Fruit smoothies"],
                                                           ["Energy drinks", "Energy drinks"],
                                                           ["Chicken wings", "Chicken wings"],
                                                           ["Sliders", "Sliders"],
                                                           ["Dumplings", "Dumplings"],
                                                           ["Chicoo", "Chicoo"],
                                                           ["Jell-O", "Jell-O"],
                                                           ["YoGo", "YoGo"],
                                                           ["Grilled Chicken Alfredo", "Grilled Chicken Alfredo"],
                                                           ["Vegetable Stir-Fry", "Vegetable Stir-Fry"],
                                                           ["Beef Tacos", "Beef Tacos"],
                                                         ].sort), { include_blank: "Select Subcategory" }, { class: "bg-gray-50 border border-sky-400 text-gray-900 text-sm rounded-lg focus:ring-sky-300 focus:border-sky-500 w-64 p-3 transition duration-150 ease-in-out" } %>
      </div>

      <div class="flex flex-col items-center">
        <%= form.label "Title:", class: "block font-medium text-gray-700" %>
        <%= form.text_field :title, placeholder: "Enter title", class: "w-64 rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
      </div>

      <div class="flex flex-col items-center">
        <%= form.label "Description:", class: "block font-medium text-gray-700" %>
        <%= form.text_area :description, placeholder: "Enter description", class: "w-64 rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
      </div>

      <div class="flex flex-col items-center">
        <%= form.label "Price:", class: "block font-medium text-gray-700" %>
        <%= form.number_field :price, step: 0.01, min: 0, placeholder: "0.00", class: "w-64 rounded-md border border-sky-400 shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-300 focus:ring-opacity-50 p-3 transition duration-150 ease-in-out" %>
      </div>

      <div class="flex flex-col items-center mb-4">
        <%= form.label :availability, "Availability:", class: "block mb-2 text-sm font-medium text-gray-900" %>

        <div class="flex items-center mb-2">
          <%= form.radio_button :availability, true, id: "availability_yes", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500" %>
          <%= form.label :availability_yes, "Yes", class: "ms-2 text-sm font-medium text-gray-900" %>
        </div>

        <div class="flex items-center">
          <%= form.radio_button :availability, false, id: "availability_no", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500" %>
          <%= form.label :availability_no, "No", class: "ms-2 text-sm font-medium text-gray-900" %>
        </div>
      </div>

      <div class="flex justify-center">
        <%= form.submit "Create", class: "w-64 bg-sky-600 hover:bg-sky-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-150 ease-in-out" %>
      </div>

    <% end %>
  </div>
</div>