<div class="p-2 mt-2 mb-4 flex justify-between items-center">
  <h2 class="text-3xl text-sky-500 font-semibold">Categories</h2>
  <%= link_to "Add Category", new_category_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-sky-500 rounded-lg hover:bg-sky-600 focus:ring-4 focus:outline-none focus:ring-blue-300" %>
</div>

<div class="flex flex-wrap gap-4 p-2">
  <% @categories.each do |category| %>
    <div class="w-full max-w-sm bg-white rounded-lg shadow-lg border border-sky-200">
      <div class="swiper" data-controller="swiper" style="width: 100%; height: 300px;">
        <div class="swiper-wrapper">
          <% if category.category_image.attached? %>
            <div class="swiper-slide flex justify-center items-center">
              <%= image_tag category.category_image, class: "object-contain w-full h-full max-w-full max-h-full" %>
            </div>
          <% else %>
            <div class="swiper-slide flex justify-center items-center">
              <p class="text-gray-600 text-center w-full h-full flex items-center justify-center">No image available</p>
            </div>
          <% end %>
        </div>
      </div>

      <div class="bg-white p-4 sm:p-6">
        <time class="block text-xs text-gray-500">Category Created At: <%= category.created_at.strftime('%B %d, %Y %I:%M %p') %> in UTC</time>
        <time class="block text-xs text-gray-500">Category Updated At: <%= category.updated_at.strftime('%B %d, %Y %I:%M %p') %> in UTC</time>
        <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-900">
          <%= category.title %>
        </h3>
        <div class="flex mt-4 md:mt-6 gap-2">
          <%= link_to 'Edit', edit_category_path(category), class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-sky-500 rounded-lg hover:bg-sky-600 focus:ring-4 focus:outline-none focus:ring-blue-300" %>
          <%= link_to "Delete", category_path(category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-red-500 rounded-lg hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-blue-300" %>
        </div>
      </div>
    </div>
  <% end %>
</div>