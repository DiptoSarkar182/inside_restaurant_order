<div class="mb-4" data-controller="previews">
  <%= form.label :category_image, "Attach category photo:", class: "block mb-2 text-base font-medium text-gray-900" %>
  <%= form.file_field :category_image, accept: 'image/png,image/gif,image/jpeg,image/webp',
                      direct_upload: true,
                      data: { previews_target: "input", action: "change->previews#preview" }, class: "w-full p-2 border border-gray-300 rounded-md shadow-sm" %>

  <div data-previews-target="preview" class="flex flex-wrap justify-center mt-4 border border-dashed border-gray-300 rounded-md p-4">
    <% if category.category_image.attached? %>
      <div class="flex flex-row flex-wrap justify-center">
        <%= image_tag category.category_image, data: { previews_target: "preview" }, class: "image w-32 h-auto object-contain rounded mx-2 mb-2" %>
      </div>
    <% else %>
      <p class="text-gray-500">No image attached</p>
    <% end %>
  </div>
</div>