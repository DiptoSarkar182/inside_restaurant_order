<div class="relative flex min-h-screen flex-col justify-center overflow-hidden py-6 sm:py-12">
  <div class="relative w-[500px] bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-sky-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10">
    <div class="mx-auto max-w-md">
      <%= image_tag 'restaurant.png', style: "width: 50px; height: 50px;" %>
      <div class="divide-y divide-sky-300/50">
        <div class="space-y-6 py-8 text-xl leading-7 text-sky-600 relative">
          <h2 class="text-2xl font-bold text-sky-700">Sign In</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mb-4">
              <label
                for="UserEmail"
                class="relative block overflow-hidden border-b border-sky-200 bg-transparent pt-3 focus-within:border-sky-600"
              >
                <%= f.email_field :email, id: "UserEmail", placeholder: "", autofocus: true, autocomplete: "email", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm" %>
                <span
                  class="absolute start-0 top-2 -translate-y-1/2 text-base text-sky-500 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base"
                >
                  Email
                </span>
              </label>
            </div>

            <div class="field mt-4 relative" data-controller="password-visibility">
              <label
                for="UserPassword"
                class="relative block overflow-hidden border-b border-sky-200 bg-transparent pt-3 focus-within:border-sky-600"
              >
                <%= f.password_field :password, id: "UserPassword", placeholder: "", autocomplete: "current-password", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm pr-10", data: { password_visibility_target: "input" } %>
                <span
                  class="absolute start-0 top-2 -translate-y-1/2 text-base text-sky-500 transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base"
                >
                  Password
                </span>
              </label>
              <button type="button" data-action="password-visibility#toggle" class="  absolute right-0 top-2/3 -translate-y-1/2 flex items-center pr-3 cursor-pointer text-sky-400 focus:outline-none focus:text-sky-600">
                <span data-password-visibility-target="icon"><%= image_tag 'icons8-eye-64.png', alt: "Show password", class: "w-5 h-5" %></span>
                <span data-password-visibility-target="icon" class="hidden"><%= image_tag 'icons8-eye-30.png', alt: "Hide password", class: "w-5 h-5" %></span>
              </button>
            </div>

            <div class="flex items-center mt-4 mb-4">
              <% if devise_mapping.rememberable? %>
                <div class="flex items-center">
                  <%= f.check_box :remember_me, class: "h-4 w-4 text-sky-500 focus:ring-sky-400 border-sky-300 rounded" %>
                  <%= f.label :remember_me, "Remember me for 7 days", class: "ml-2 text-sky-600" %>
                </div>
              <% end %>
            </div>

            <div class="flex justify-between items-center gap-x-4 mt-6">
              <div class="actions w-full sm:w-1/2">
                <%= f.submit "Sign in", class: "w-full px-6 py-2 text-lg text-white font-semibold rounded-full border border-sky-600 bg-gradient-to-r from-sky-400 to-sky-600 hover:from-sky-500 hover:to-sky-700 hover:shadow-lg transition duration-300 ease-in-out cursor-pointer text-center" %>
              </div>

              <div class="pt-1 text-base font-semibold leading-7 w-full sm:w-1/2">
                <% if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "Create Account", new_registration_path(resource_name), class: "w-full px-6 py-3 text-lg text-sky-600 font-semibold rounded-full border border-sky-600 hover:bg-sky-50 transition duration-300 ease-in-out cursor-pointer text-center" %>
                <% end %>
              </div>
            </div>

        <% end %>
          <div class="pt-1 text-base font-semibold leading-7">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgotten login details?", new_password_path(resource_name), class: "text-sky-600 hover:text-sky-800 underline" %><br />
            <% end %>

            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
              <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-sky-600 hover:text-sky-800 underline" %><br />
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>