<div class="">
  <div class="relative bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-sky-900/5 sm:mx-auto sm:max-w-3xl sm:rounded-lg">
    <h2 class="text-2xl text-center mb-4 text-sky-700">Edit User</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div x-data="{photoName: null, photoPreview: null}" class="col-span-6 ml-2 sm:col-span-4 md:mr-3">
        <!-- Photo File Input -->
        <%= f.file_field :avatar, accept: 'image/png,image/gif,image/jpeg', class: 'hidden', 'x-ref': 'photo', 'x-on:change': "
                                                                                    photoName = $refs.photo.files[0].name;
                                                                                    const reader = new FileReader();
                                                                                    reader.onload = (e) => {
                                                                                      photoPreview = e.target.result;
                                                                                    };
                                                                                    reader.readAsDataURL($refs.photo.files[0]);
                                                                                  " %>

        <label class="block text-sky-700 text-sm font-bold mb-2 text-center" for="photo">
          Attach profile photo:
        </label>

        <div class="text-center">
          <!-- Current Profile Photo -->
          <div class="mt-2" x-show="!photoPreview">
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar, class: "w-20 h-20 m-auto rounded-full shadow" %>
            <% else %>
              <%= image_tag 'customer_icon.png', class: "w-20 h-20 m-auto rounded-full shadow" %>
            <% end %>
          </div>
          <!-- New Profile Photo Preview -->
          <div class="mt-2" x-show="photoPreview" style="display: none;">
      <span class="block w-20 h-20 rounded-full m-auto shadow" x-bind:style="'background-size: cover; background-repeat: no-repeat; background-position: center center; background-image: url(\'' + photoPreview + '\');'" style="background-size: cover; background-repeat: no-repeat; background-position: center center; background-image: url('null');">
      </span>
          </div>
          <button type="button" class="inline-flex items-center px-4 py-2 bg-sky-100 border border-sky-300 rounded-md font-semibold text-xs text-sky-700 uppercase tracking-widest shadow-sm hover:bg-sky-200 focus:outline-none focus:border-sky-400 focus:shadow-outline-sky active:text-sky-800 active:bg-sky-50 transition ease-in-out duration-150 mt-2 ml-3" x-on:click.prevent="$refs.photo.click()">
            Select New Photo
          </button>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-6">
        <div>
          <div class="field mb-4">
            <label
              for="first_name"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.text_field :first_name, id: "first_name", placeholder: "", autofocus: true, autocomplete: "first name", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-lg" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                  First Name
                </span>
            </label>
          </div>

          <div class="field mb-4">
            <label
              for="date_of_birth"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.date_field :date_of_birth, id: "date_of_birth", placeholder: "", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-lg" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                Date of Birth
              </span>
            </label>
          </div>

          <div class="field mt-4" data-controller="phone-number">
            <%= f.label :contact_number, class: "block font-medium text-black" %>
            <div class="w-full max-w-sm min-w-[200px]">
              <div class="relative mt-1">
                <div class="absolute top-2 left-0 flex items-center pl-3">
                </div>
                <%= f.telephone_field :contact_number, id: "phone-input", data: { phone_number_target: "phoneInput" }, value: resource.contact_number, class: "w-full bg-transparent placeholder:text-sky-400 text-sky-700 text-sm border border-black rounded-md pr-3 pl-20 py-2 transition duration-300 ease focus:outline-none focus:border-sky-400 shadow-sm focus:shadow" %>
              </div>
            </div>
          </div>


          <div class="mt-4">
            <%= f.label :nationality, class: "block font-medium text-black" %>
            <%= f.country_select :nationality, {format: :with_flag}, { class: "w-full rounded-md border-black shadow-sm focus:border-sky-500 focus:ring focus:ring-sky-200 focus:ring-opacity-50" } %>
          </div>


        </div>

        <div>
          <div class="field mb-4">
            <label
              for="last_name"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.text_field :last_name, id: "last_name", placeholder: "", autocomplete: "last name", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-lg" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                  Last Name
                </span>
            </label>
          </div>

          <div class="field mb-4">
            <label
              for="UserEmail"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.email_field :email, id: "UserEmail", placeholder: "", autofocus: true, autocomplete: "email", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-lg" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                  Email
                </span>
            </label>
          </div>

          <div class="field mb-4">
            <label
              for="password"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.password_field :password, id: "password", placeholder: "", autofocus: true, autocomplete: "email", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                  New Password
                </span>
            </label>
          </div>

          <div class="field mb-4">
            <label
              for="password_confirmation"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.password_field :password_confirmation, id: "password_confirmation", placeholder: "", autofocus: true, autocomplete: "new-password", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                  New Password Confirmation
                </span>
            </label>
          </div>

          <div class="field mt-4">
            <label
              for="current_password"
              class="relative block overflow-hidden border-b border-black bg-transparent pt-3 focus-within:border-sky-600"
            >
              <%= f.password_field :current_password, id: "current_password", placeholder: "", autocomplete: "currentpassword", class: "peer h-8 w-full border-none bg-transparent p-0 placeholder-sky-300 focus:border-transparent focus:outline-none focus:ring-0 sm:text-sm" %>
              <span
                class="absolute start-0 top-2 -translate-y-1/2 text-base text-black transition-all peer-placeholder-shown:top-1/2 peer-placeholder-shown:text-lg peer-focus:top-2 peer-focus:text-base peer-focus:text-sky-500"
              >
                Current Password
              </span>
            </label>
            <i>(we need your current password to confirm your changes)</i>
          </div>


        </div>
      </div>
      <div class="flex justify-between items-center mt-6 gap-x-4">
        <%= link_to "Back", :back, class: "w-full px-6 py-2 text-lg text-sky-600 font-semibold rounded-full border-2 border-sky-600 hover:bg-sky-50 transition duration-300 ease-in-out cursor-pointer text-center" %>
        <%= f.submit "Update", class: "w-full px-6 py-2 text-lg text-white font-semibold rounded-full border border-sky-600 bg-gradient-to-r from-sky-400 to-sky-600 hover:from-sky-500 hover:to-sky-700 hover:shadow-lg transition duration-300 ease-in-out cursor-pointer text-center" %>
      </div>

      <% end %>
    <h3 class="text-lg font-semibold text-sky-700 mt-4">Delete my account</h3>

    <div class="mt-4">
      <p class="text-sm text-sky-500">Unhappy? We're sad to see you go.</p>
      <%= button_to "Delete my account", registration_path(resource_name),
                    class: "mt-3 bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded shadow-lg transition duration-300 ease-in-out",
                    data: { confirm: 'Are you sure?', turbo_confirm: 'Are you sure?' }, method: :delete %>
    </div>

  </div>
</div>

